<div class="col-lg-12">
  <div class="card">
    <div class="card-header">
      <i class="fa fa-align-justify"></i> Menus
      <a href="javascript:void(0)" onclick="openNewContentTypeModal()" class="btn btn-success float-right new-menu">New
        Menu</a>
    </div>
    <div class="card-body page-list">
      <table class="table table-responsive-sm table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
          <tr>
            <td><a href="/admin/menus/edit/{{ this.id }}">{{ this.data.title }}</a></td>
            <td>{{ contentType.description}}</td>
            <td>

              <a class="btn btn-sm btn-primary rmargin" href="/admin/menus/edit/{{ this.id }}">Edit</a>

              <a tabindex="0" class="btn btn-sm btn-danger" role="button" data-html="true" data-toggle="popover"
                data-trigger="focus" title="Delete <b>{{ this.data.title }}</b> Forever?" data-content="<a href='/content/{{ this.id }}'
   class='btn btn-sm btn-danger rmargin'>Confirm Delete</a>
">Delete</a>

              <div class="collapse" style="margin: 12px 0 0; max-width:300px;" id="collapse{{ this.systemid }}">
                <div class="card card-body">
                  <a class='btn btn-sm btn-danger' href="#" onclick='deleteContentType({{ this.id }})'>Confirm Delete
                    {{ this.title }}?</a> </div>
              </div>

            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
  </div>
</div>
